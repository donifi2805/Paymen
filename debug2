            <div class="flex justify-between items-center">
                <div>
                    <h1 class="text-xl font-bold"><i class="fas fa-bug mr-2"></i>ICS Debugger</h1>
                    <p class="text-blue-100 text-xs">Cek Status Transaksi Manual (Realtime)</p>
                </div>
                <a href="index.html" class="bg-white/20 hover:bg-white/30 text-white px-3 py-1 rounded-lg text-xs font-bold transition">
                    Kembali ke App
                </a>
            </div>
        </div>

        <div class="p-6">
            <label class="block text-sm font-bold text-gray-700 mb-2">Masukkan Reff ID / Trx ID</label>
            <div class="flex gap-2 mb-4">
                <input type="text" id="trxIdInput" placeholder="Contoh: ICS-1708..." class="flex-1 bg-gray-50 border border-gray-300 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500 font-mono text-sm">
                <button onclick="checkStatus()" id="btnCheck" class="bg-blue-600 hover:bg-blue-700 text-white font-bold px-6 py-3 rounded-xl shadow-lg transition flex items-center gap-2">
                    <span id="btnText">CEK</span>
                </button>
            </div>

            <div id="statusLog" class="text-[10px] text-gray-400 mb-4 text-center italic hidden"></div>

            <div id="resultArea" class="hidden animate-pulse">
                
                <div id="statusBadgeContainer" class="mb-4 text-center p-3 rounded-xl border border-dashed">
                    <span class="text-xs text-gray-500 block mb-1">Status Server</span>
                    <span id="statusText" class="text-xl font-black uppercase">-</span>
                </div>

                <div class="bg-gray-50 rounded-xl p-4 border border-gray-200 mb-4 space-y-2">
                    <div class="flex justify-between border-b border-gray-200 pb-2">
                        <span class="text-xs text-gray-500">Produk</span>
                        <span id="resProduct" class="text-xs font-bold text-gray-800 text-right">-</span>
                    </div>
                    <div class="flex justify-between border-b border-gray-200 pb-2">
                        <span class="text-xs text-gray-500">Tujuan</span>
                        <span id="resTarget" class="text-xs font-bold text-gray-800 font-mono">-</span>
                    </div>
                    <div class="flex justify-between border-b border-gray-200 pb-2">
                        <span class="text-xs text-gray-500">SN / Pesan</span>
                        <span id="resSn" class="text-xs font-bold text-blue-600 text-right break-all">-</span>
                    </div>
                    <div class="flex justify-between pt-1">
                        <span class="text-xs text-gray-500">Harga</span>
                        <span id="resPrice" class="text-xs font-bold text-gray-800">-</span>
                    </div>
