<script>
    // KONFIGURASI SESUAI FILE UTAMA
    const ICS_CONFIG = {
        apiKey: "dcc0a69aa74abfde7b1bc5d252d858cb2fc5e32192da06a3",
        baseUrl: "https://reseller.ics-store.my.id"
    };

    // PROXY LIST (Sama seperti index.html untuk memastikan koneksi)
    const PROXY_LIST = [
        { name: 'CodeTabs', url: 'https://api.codetabs.com/v1/proxy?quest=' },
        { name: 'CorsProxyIO', url: 'https://corsproxy.io/?' },
        { name: 'AllOrigins', url: 'https://api.allorigins.win/raw?url=' },
        { name: 'Direct', url: '' }
    ];

    async function checkStatus() {
        const input = document.getElementById('trxIdInput').value.trim();
        if (!input) return alert("Mohon masukkan ID Transaksi!");

        // Reset UI
        toggleLoading(true);
        document.getElementById('resultArea').classList.add('hidden');
        document.getElementById('errorArea').classList.add('hidden');
        document.getElementById('statusLog').classList.remove('hidden');
        document.getElementById('statusLog').innerText = "Menyiapkan koneksi...";

        // Construct URL ICS (Sesuai dokumentasi mereka: action=checkTransaction)
        // Tambahkan timestamp (_t) untuk menghindari cache proxy
        const targetUrl = `${ICS_CONFIG.baseUrl}/?action=checkTransaction&apikey=${ICS_CONFIG.apiKey}&refid=${input}&_t=${Date.now()}`;

        let success = false;
        let finalData = null;

        // Loop Proxy (Mencoba semua jalur)
        for (const proxy of PROXY_LIST) {
            document.getElementById('statusLog').innerText = `Mencoba menghubungkan via ${proxy.name}...`;
            
            try {
                const fullUrl = proxy.url ? proxy.url + encodeURIComponent(targetUrl) : targetUrl;
                
                const controller = new AbortController();
                const timeoutId = setTimeout(() => controller.abort(), 10000); // 10 detik timeout

                const res = await fetch(fullUrl, { signal: controller.signal });
                clearTimeout(timeoutId);

                if (res.ok) {
                    const text = await res.text();
                    try {
                        let json = JSON.parse(text);
                        // Handle jika proxy membungkus response (seperti AllOrigins kadang2)
                        if (json.contents) {
                            try { json = JSON.parse(json.contents); } catch(e) { json = json.contents; }
                        }
                        
                        finalData = json;
                        success = true;
                        break; // Berhenti jika sudah berhasil
                    } catch (e) {
                        console.warn(`Gagal parse JSON via ${proxy.name}`);
                    }
                }
            } catch (e) {
                console.warn(`Gagal koneksi via ${proxy.name}: ${e.message}`);
            }
        }

        toggleLoading(false);
        document.getElementById('statusLog').classList.add('hidden');

        if (success && finalData) {
            renderResult(finalData);
        } else {
            showError("Gagal terhubung ke server ICS melalui semua jalur Proxy. Coba lagi nanti.");
        }
    }

    function renderResult(data) {
        document.getElementById('resultArea').classList.remove('hidden');
        document.getElementById('resultArea').classList.remove('animate-pulse'); // Hapus animasi loading
        
        // Menampilkan JSON Mentah
        document.getElementById('rawJson').innerText = JSON.stringify(data, null, 2);

        // Parsing Data untuk UI User Friendly
        // Biasanya ICS mengembalikan data di dalam object utama atau field 'data'
        const d = data.data || data; 

        // Mapping Data (Sesuaikan dengan struktur respon ICS yang biasa)
        const product = d.produk || d.code || d.kode_produk || '-';
        const target = d.tujuan || d.nomor_tujuan || '-';
        const sn = d.sn || d.message || d.msg || d.keterangan || 'Tidak ada pesan';
        const price = d.harga || d.price || 0;
        
        // Logika Status
        let status = (d.status || '').toLowerCase();
        let statusColor = 'text-yellow-600 bg-yellow-50 border-yellow-200';
        let statusLabel = 'PENDING / PROSES';

        if (status === 'success' || status === 'sukses' || status === 'berhasil') {
            statusColor = 'text-green-600 bg-green-50 border-green-200';
            statusLabel = 'SUKSES';
        } else if (status === 'failed' || status === 'gagal' || status === 'error') {
            statusColor = 'text-red-600 bg-red-50 border-red-200';
            statusLabel = 'GAGAL';
        }

        // Update UI Elements
        const badge = document.getElementById('statusBadgeContainer');
        badge.className = `mb-4 text-center p-3 rounded-xl border border-dashed ${statusColor}`;
        document.getElementById('statusText').innerText = statusLabel;

        document.getElementById('resProduct').innerText = product;
        document.getElementById('resTarget').innerText = target;
        document.getElementById('resSn').innerText = sn;
        document.getElementById('resPrice').innerText = "Rp " + new Intl.NumberFormat('id-ID').format(price);
    }

    function showError(msg) {
        document.getElementById('errorArea').classList.remove('hidden');
        document.getElementById('errorMsg').innerText = msg;
    }

    function toggleLoading(isLoading) {
        const btn = document.getElementById('btnCheck');
        const txt = document.getElementById('btnText');
        
        if (isLoading) {
            btn.disabled = true;
            btn.classList.add('opacity-70', 'cursor-not-allowed');
            txt.innerHTML = '<div class="loader"></div>';
        } else {
            btn.disabled = false;
            btn.classList.remove('opacity-70', 'cursor-not-allowed');
            txt.innerText = 'CEK';
        }
    }
</script>

</body>
</html>
